@model SGC.Areas.Global.Models.Empresa_TransModel
@{
    ViewBag.Title = "SGC | Visualizar Empresa de Transporte";
    Layout = "~/Areas/Sistema/Views/MP_Vista.cshtml";
}

<div id="main" role="main">
    <div id="ribbon">
        <ol class="breadcrumb">
            <img src="/Recursos/Img/IconoPagina.png" style="width: 35px" />&nbsp&nbsp
            <li><b>VISUALIZAR EMPRESA DE TRANSPORTE</b></li>
        </ol>
    </div>

    <div id="content">
        <div class="well NoPadding">
            <button id="btn_buscar" class="btn btn-primary" onclick="document.location = '@Url.RouteUrl("V_Sel_ConsultaEmpresaTrans")';">
                <i class="fa fa-search"></i> Consultar
            </button>
            <button id="btn_registrar" class="btn btn-info" onclick="document.location = '@Url.RouteUrl("V_Ins_EmpresaTrans")';">
                <i class="fa fa-file"></i> Crear
            </button>
            <button id="btn_editar" class="btn btn-success" onclick="document.location = '@Url.RouteUrl("V_Upd_EmpresaTrans")' + '?id=' + '@Model.mme.me_empresa_trans.e_empresa_trans.nu_id_empresa_trans';">
                <i class="fa fa-edit"></i> Actualizar
            </button>
            @if (Model.mme.e_tran.ch_tran_stdo_regi == "A")
            {
                <button title="Deshabilitar" id="btnstdoac_@Model.mme.me_empresa_trans.e_empresa_trans.nu_id_empresa_trans" class="btn btn-danger" onclick="Cambiar_Estado(@Model.mme.me_empresa_trans.e_empresa_trans.nu_id_empresa_trans)"><i class="fa fa-remove"></i> Deshabilitar</button>
            }
            else
            {
                <button title="Habilitar" id="btnstdoac_@Model.mme.me_empresa_trans.e_empresa_trans.nu_id_empresa_trans" class="btn btn-success" onclick="Cambiar_Estado(@Model.mme.me_empresa_trans.e_empresa_trans.nu_id_empresa_trans)"><i class="fa fa-check"></i> Habilitar</button>
            }

        </div>

        <form id="checkout-form" class="well" novalidate="novalidate">
            <div class="row">
                @Html.HiddenFor(m => m.mme.me_empresa_trans.e_empresa_trans.nu_id_empresa_trans,
                new
                {
                    atributo = "mme.me_empresa_trans.e_empresa_trans.nu_id_empresa_trans"
                })
                
                <big><span id="span_estado" class="label label-danger" style="display:none">DESHABILITADO!</span></big>
                
                <div class="col-sm-12 col-md-12 col-lg-12">
                    <section class="smart-form col-sm-4 col-md-4 col-lg-4">
                        <div class="col-sm-4 col-md-4 col-lg-4">
                            <label class="label-margin">
                                Código
                            </label>
                        </div>
                        <div class="col-sm-8 col-md-8 col-lg-8">
                            <label class="input">
                                @Html.TextBoxFor(m => m.mme.me_empresa_trans.e_empresa_trans.vc_cod_empresa_trans,
                                new
                                {
                                    atributo    = "mme.me_empresa_trans.e_empresa_trans.vc_cod_empresa_trans",
                                    id          = "vc_cod_empresa_trans",
                                    disabled    = "disabled"
                                })
                            </label>
                        </div>
                    </section>
                    <section class="smart-form col-sm-4 col-md-4 col-lg-4">
                        <div class="col-sm-4 col-md-4 col-lg-4">
                            <label class="label-margin">
                                Razón Social
                            </label>
                        </div>
                        <div class="col-sm-8 col-md-8 col-lg-8">
                            <label class="input">
                                @Html.TextBoxFor(m => m.mme.me_empresa_trans.e_empresa_trans.vc_desc_empresa_trans,
                                new
                                {
                                    atributo    = "mme.me_empresa_trans.e_empresa_trans.vc_desc_empresa_trans",
                                    id          = "vc_desc_empresa_trans",
                                    disabled    = "disabled"
                                })
                            </label>
                        </div>
                    </section>
                    <section class="smart-form col-sm-4 col-md-4 col-lg-4">
                        <div class="col-sm-4 col-md-4 col-lg-4">
                            <label class="label-margin">
                                RUC
                            </label>
                        </div>
                        <div class="col-sm-8 col-md-8 col-lg-8">
                            <label class="input">
                                @Html.TextBoxFor(m => m.mme.me_empresa_trans.e_empresa_trans.vc_ruc,
                                new
                                {
                                    atributo    = "mme.me_empresa_trans.e_empresa_trans.vc_ruc",
                                    id          = "vc_ruc",
                                    disabled    = "disabled"
                                })
                            </label>
                        </div>
                    </section>
                </div>

            </div>
        </form>
        <div class="well col-sm-12 col-md-12 col-lg-12 text-center">
            <div class="btn btn-group">
                <button type="button" class="btn btn-danger btn-lg" onclick="document.location = '@Url.RouteUrl("V_Sel_ConsultaEmpresaTrans")';"><i class="fa fa-remove"></i> Cancelar</button>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")

<script src="/Scripts/Validacion.js"></script>
<script type="text/javascript">

    var Peticion = false;
    var Area = "Global";
    var Msg = "";

    $(document).ready(function () {
        if ("@Model.mme.e_tran.ch_tran_stdo_regi" == "I")
        {
            $('#span_estado').attr('style', 'display');
        }
    });
     

    window.onbeforeunload = function () {
        if (Peticion) { return "Tiene un proceso ejecutándose no salga de este sitio aún."; }
    }

    function Cambiar_Estado(id) {

        if (Peticion) { EnProceso(Msg); return false; }

        Msg = "Se está cambiando el estado de la empresa transporte, espere un momento...";        
        NuevaPeticion(Msg)
        Peticion = true;
        $.ajax({
            url: '@Url.RouteUrl("AC_UpdEstado_EmpresaTrans")',
            type: "post",
            data: JSON.stringify({ id: id }),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (r) {
                if (r.std) {
                    //$('#Transaccion').html(r.trans);
                    if (r.trans.e_tran.nu_tran_stdo == 0) {
                        ErrorBase(r.trans.e_tran.tx_tran_mnsg)
                    }
                    else {
                        CambiarEstadoPerfil(id, r.trans.e_tran.tx_tran_mnsg)

                        if ($('#btnstdoac_' + id).attr('title') == "Habilitar")
                            $('#span_estado').attr('style', 'display:display');
                        else
                            $('#span_estado').attr('style', 'display:none');
                    }
                }
                else {
                    ErrorApp(r.msg)
                }
                Peticion = false;
            }
        });
    }

</script>

